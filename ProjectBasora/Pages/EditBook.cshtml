@page
@model ProjectBasora.Pages.EditBookModel

@{
    ViewData["Title"] = "EditBook";
}

<h1>EditBook</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.BookId" />
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.ISBN" class="control-label"></label>
                <input asp-for="Book.ISBN" class="form-control" />
                <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.ContentType" class="control-label"></label>
                <input asp-for="Book.ContentType" class="form-control" />
                <span asp-validation-for="Book.ContentType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Book.Public" /> @Html.DisplayNameFor(model => model.Book.Public)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Book.Borrowed" /> @Html.DisplayNameFor(model => model.Book.Borrowed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Book.UserId" class="control-label"></label>
                <select asp-for="Book.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Book.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.UploadedAt" class="control-label"></label>
                <input asp-for="Book.UploadedAt" class="form-control" />
                <span asp-validation-for="Book.UploadedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
